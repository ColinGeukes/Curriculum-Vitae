doctype html
html
    head
        title #{appName}
        link(href="https://fonts.googleapis.com/css?family=Maven+Pro&display=swap" rel="stylesheet")
        script(type="text/javascript", src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js")
        script(type="text/javascript", src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js")
        script(src="https://kit.fontawesome.com/62bb281db1.js")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", type="text/css", href="/css/index.css")
        link(rel="stylesheet", type="text/css", href="/css/pageProject.css")
    body
        include includes/navigation
        div(class="content-container fully-hidden")
            section(id="project")
                div(class="section-header clip-always-visible has-shadow")
                    div(class="content")
                        h1
                    div(class="shadow")
                div(class="section-body straight")
                    div(class="content")
                        div(class="flex-wrap")
                            div(class="image")
                            div(class="description")
                            div(id="project-tags")
                    div(class="shadow")
        include includes/footer
        script(type="text/javascript", src="/js/views/project/project.js")
        script(type="text/javascript", src="/js/views/project/projectAbility.js")
        script(type="text/javascript", src="/js/views/project/pageHandler.js")
        script loadProject(#{params.id})


